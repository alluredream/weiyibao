<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.ContentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.test.makestart2.settingactivity.SystemSetting">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3F51B5"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/llLeftGoBack"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="15dp" >

            <TextView
                android:id="@+id/toback"
                android:background="@drawable/selector_capture_back"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:clickable="false"
                android:drawablePadding="5dp"
                android:focusable="false"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvCenterTitle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/llLeftGoBack"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="系统设置"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/line1"
        android:layout_marginLeft="80dp"
        android:background="@drawable/bg_shadow"
        android:layout_marginTop="60dp"
        android:layout_width="800dip"
        android:layout_height="40dp">

        <TextView
            android:textAlignment="center"
            android:layout_marginLeft="40dp"
            android:text="夜间模式"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Switch
            android:layout_marginLeft="620dp"
            android:id="@+id/switcha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumb="@drawable/switch_custom_thumb_selector"
            android:track="@drawable/switch_custom_track_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="80dp"
        android:background="@drawable/bg_shadow"
        android:layout_marginTop="100dp"
        android:layout_width="800dip"
        android:layout_height="40dp">

        <TextView
            android:textAlignment="center"
            android:layout_marginLeft="40dp"
            android:text="版 本 号"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/version"
            android:text="0.0.1"
            android:layout_marginLeft="640dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line3"
        android:layout_marginLeft="80dp"
        android:background="@drawable/bg_shadow"
        android:layout_marginTop="140dp"
        android:onClick="clear"
        android:layout_width="800dip"
        android:layout_height="40dp">

        <TextView
            android:textAlignment="center"
            android:layout_marginLeft="40dp"
            android:text="清理缓存"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/cache"
            android:text=""
            android:layout_marginLeft="620dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.ContentFrameLayout>
